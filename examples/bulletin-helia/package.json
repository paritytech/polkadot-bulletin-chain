{
  "name": "bulletin-helia",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "exports": {
    "./ipfs": {
      "types": "./dist-cli/ipfs.d.ts",
      "default": "./dist-cli/ipfs.js"
    },
    "./logger-base": {
      "types": "./dist-cli/logger-base.d.ts",
      "default": "./dist-cli/logger-base.js"
    },
    "./logger-cli": {
      "types": "./dist-cli/logger-cli.d.ts",
      "default": "./dist-cli/logger-cli.js"
    }
  },
  "bin": {
    "bulletin-helia": "./dist-cli/cli.js"
  },
  "scripts": {
    "prepare": "tsc --project tsconfig.cli.json",
    "dev": "vite",
    "dev:cli": "tsx src/cli.ts",
    "build": "npm run build:web && npm run build:cli",
    "build:web": "tsc && vite build",
    "build:cli": "tsc --project tsconfig.cli.json",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,css}' 'index.html'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json,css}' 'index.html'"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^2.7.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "@multiformats/blake2": "^2.0.2",
    "@multiformats/multiaddr": "^13.0.1",
    "helia": "^6.0.11",
    "multiformats": "^13.4.1"
  }
}
